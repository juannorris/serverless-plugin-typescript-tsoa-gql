{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "rootDir": ".",
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": [
    "node_modules"
  ]
}